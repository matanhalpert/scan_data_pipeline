# Database Configuration
# MySQL database connection settings
DB_USER=your_database_username
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_NAME=data_pipeline_db

# Redis Configuration  
# Redis server connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_or_leave_empty

# Cache Expiration Settings (in seconds)

# How long to cache user data
USER_DATA_CACHE_EXPIRATION=3600

# How long to cache extraction results
EXTRACTION_RESULTS_CACHE_EXPIRATION=1800

# How long to cache metadata
METADATA_CACHE_EXPIRATION=7200

# Example values:
# 3600 = 1 hour
# 1800 = 30 minutes
# 7200 = 2 hours
